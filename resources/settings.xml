<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="General">
        <setting id="server_port" type="number" label="30010" default="7777" />
        <setting id="epg_xml_url" type="text" label="EPG XML URL" default="https://example.com/epg.xml.gz">
            <level>1</level>
            <help>URL to download XMLTV EPG data. Can be .xml or .xml.gz format. Leave empty to use default.</help>
        </setting>

        <!-- EPG Cache Management (optional buttons) -->
        <setting id="epg_clear_cache" type="action" label="Clear EPG Cache">
            <level>2</level>
            <help>Force clear EPG cache and re-download on next request</help>
            <data>RunScript(special://home/addons/YOUR_ADDON_ID/clear_epg_cache.py)</data>
        </setting>
        <setting id="default_country" type="labelenum" label="30011" values="DE|AT|CH|EU" default="DE" />
    </category>
    
    <category label="Joyn (DE)">
        <setting id="enable_joyn_de" type="bool" label="Enable Joyn (DE)" default="false" />
